<p id="notice"><%= notice %></p>

<h1>Allowances</h1>

<table>
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% allowances.each do |allowance| %>
    <br>
    <tr>
      <td>Name: <%= allowance.name %></td>
      <td>Starting Amount: <%= allowance.starting_amount %></td>
      <td>Planned: <%= allowance.planned %></td>
      <td>Spent: <%= allowance.spent %></td>
      <td>Category: <%= allowance.category %></td>
      <td>Start Date: <%= allowance.start_date %></td>
      <td>End Date: <%= allowance.end_date %></td>
      <td><%= link_to 'Show', allowance %></td>
      <td><%= link_to 'Edit', edit_allowance_path(allowance) %></td>
      <td><%= link_to 'Destroy', allowance_path(allowance), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Allowance', new_allowance_path %>
